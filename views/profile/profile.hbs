<link rel='stylesheet' href='/stylesheets/style.css' >


<div class="container-individual-profile">
    
<h1 class="profile-title">My profile</h1>
<div class="image-user">
         <img src="{{!--{{currentUser.image}}--}}/images/perfil.png" alt="image-profile"> 
    </div>
    <div class="container-data-profile">
        <h3>I'm {{currentUser.username}}</h3>
        <h3>Age: {{currentUser.age}}</h3>
        <h3>City: {{currentUser.city}}</h3>
        <h3>Mood: {{currentUser.mood}}</h3> 
        <h3>About me: <br> {{currentUser.description}}</h3>
  </div>
  
  <h1 class="event-list">Joined events:</h1>
    <ul class="event-list-profile">
  {{#each myEvents }}
  <li>
    <a href="/events/{{this._id}}" class="name-event">- {{ this.name }}</a>
  </li>
  {{/each}}
</ul>



{{#if isOwner}}
<nav >
<div class="profile-modifications">
<a href="/profile/{{currentUser._id}}/edit"class="button">Edit</a>
</div>

<form action="/profile/{{currentUser._id}}/delete" onclick="return confirm('Are you sure you want to delete your account?');" method="post">
      <button class="delete-acc" type="submit">Delete account</button>
    </form> 


{{/if}}
</nav>
  </div>



