<link rel='stylesheet' href='/stylesheets/style.css' >

<form action="/profile/{{profileData._id}}" method="post">

<div class="container-individual-profile">

<h1 class="profile-title">Edit your profile</h1>
<div class="image-user">
         <img src="{{!--{{currentUser.image}}--}}/images/perfil.png" alt="image-profile"> 
    </div>
    <div class="container-data-profile">
        <h3>I'm <input type="text" name="username" id="user-name" placeholder="Name" value="{{profileData.username}}"><br></h3>
        <h3>Age: <input type="text" name="age" id="user-age" placeholder="Age" value="{{profileData.age}}"><br></h3>
        <h3>City: <input type="text" name="city" id="user-city" placeholder="City" value="{{profileData.city}}"><br></h3>
        <h3>Choose a mood: <br>
          <select id="mood" name="mood">
    <option value="Chill">Chill</option>
    <option value="Medium">Medium</option>
    <option value="Hard">Hard</option>
  </select><br></h3> 
  </div>
 <div class="about-me">
          <h3>About me:<br><input type="text" name="description" id="user-description"placeholder="About me" value="{{profileData.description}}"><br></h3>
 </div>

  <button type="submit"class="button-next">Submit</button>

</form>

  





