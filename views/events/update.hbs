{{!-- action to route post --}}
<form action="/events/{{event._id}}" method="post">
  <label for="name">name</label>
  <input type="text" name="name" id="event-name" placeholder="name" value="{{event.name}}">
  <label for="description">description</label>
  <input type="text" name="description" id="event-description" value="{{event.description}}">
  <label for="hour">hour</label>
  <input type="text" name="hour" id="event-hour" value="{{event.hour}}">
  <button type="submit">submit</button>
</form>
<h2>Review event</h2>
<form action="/events/{{eventv._id}}/review" method="post">
  <label for="text">text</label>
  <input type="text" name="text" id="review-text" placeholder="text">
  <label for="author">author</label>
  <input type="text" name="author" id="review-author">
  <button type="submit">submit</button>
</form>
<h2>Reviews</h2>
<ul>
  {{#each reviews}}
  <li>{{this.text}}</li>
  {{/each}}
</ul>