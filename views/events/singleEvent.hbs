<div class="container-individual-Event">
    

    <div class="image-event">        
        <img src="{{eventData.image}}"class="eventsimg">
    </div>
    <div class="container-data-event">
        <h1 class="event-name">{{eventData.name}}</h1>
        <h3 class="singleEvent-style-description">{{eventData.description}}</h3>
        <h3 class="singleEvent-style" class="singleEvent-style-mood">Mood del evento: {{eventData.mood}}</h3>
        <h3 class="singleEvent-style" class="singleEvent-style-location">Lugar: {{eventData.location}}</h3>
        <h3 class="singleEvent-style" class="singleEvent-style-date">Fecha: {{momentDate}}</h3>
        <h3 class="singleEvent-style" class="singleEvent-style-hour">Hora: {{eventData.hour}}h</h3>


    {{#if isJoined}}
        <form action="/events/{{eventData._id}}/unjoin" method="post">
            <button type="submit"class="button-next">Disjoin</button>
        </form>
        {{else}}
            <form action="/events/{{eventData._id}}/join" method="post">
                <button type="submit" class="button-next"></button>Join</button>
            </form>
    {{/if}}

        {{!-- FOREACH DEL ARRAY JOIN --}}

        <ul class= "join-list">
            {{#each eventData.joined}}
            <li> <a href="/profile/{{this._id}}">{{this.username}}</a></li>
            {{/each}}
        </ul>


        <a href="/events"class="button">Go back</a>


        {{#if isOwner}}
                <a href="/events/{{eventData._id}}/update"class="button">Update</a>
            
            <form action="/events/{{eventData._id}}/delete" onclick="return confirm('Are you sure you want to delete this event?');" method="post">
                <button type="submit" class="nextpage">Delete</button>
            </form>
        {{/if}}
</div>