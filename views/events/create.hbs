  <input type="text" name="name" id="event-name" placeholder="name">
  <label for="description">description</label>
  <input type="text" name="description" id="event-description">
  <label for="hour">hour</label>
  <input type="text" name="hour" id="event-hour">
  <label for="location">location</label>
  <input type="text" name="location" id="event-location">
  <label for="mood">Pick a event's mood: </label>
  <select id="mood">
  <option value="">--Select--</option>
  <option value="{{eventData.mood}}">Chill</option>
  <option value="{{eventData.mood}}">Medium</option>
  <option value="{{eventData.mood}}">Hard</option>
</select> 
  <button type="submit">submit</button>
