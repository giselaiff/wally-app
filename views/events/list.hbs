<h1>List all events</h1>
<p>Welcome {{ currentUser.username }}</p>
{{#if info}}
{{info}}
{{/if}}
<a href="/profile/{{currentUser._id}}">My Profile</a>
<ul>
  {{#each events }}
  <li>
    <a href="/events/{{this._id}}">{{ this.name }}</a>
    <form action="/events/{{this._id}}/delete" method="post">
      <button type="submit">delete</button>
    </form>
  </li>
  {{/each}}
</ul>
<a href="/events/add">create an event</a>
<a href="/logout">logout</a>